<project name="build" basedir="." default="build">
    <property name="dir.src" value="Main/src/com/teamdev/demo"/>
    <property name="dir.lib" value="lib"/>

    <path id="classpath">
        <fileset dir="lib" includes="*/*.jar"/>
    </path>

    <target name="build">
        <mkdir dir="Main/classes"/>
        <mkdir dir="target"/>
        <javac classpathref="classpath" destdir="Main/classes" srcdir="Main/src/com/teamdev/demo"/>
        <jar destfile="target/application.jar">
            <fileset dir="Main/classes" includes="**/**"/>
        </jar>
    </target>

</project>